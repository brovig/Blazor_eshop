@if (this.Product != null)
{
    <tr>
        <td>
            <NavLink href="@($"product/{Product.ProductId}")">@Product.Name</NavLink>
        </td>
        <td>@Product.Brand</td>
        <td>@Product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
    </tr>
}


@code {
    [Parameter]
    public Product Product { get; set; }
}